modules = ["python-3.12", "web", "postgresql-16"]
run = "streamlit run app.py"

[nix]
channel = "stable-24_05"
packages = ["cargo", "glibcLocales", "libiconv", "rustc"]

[deployment]
run = ["sh", "-c", "streamlit run app.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8501
externalPort = 80

[agent]
expertMode = true
integrations = ["google-mail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
